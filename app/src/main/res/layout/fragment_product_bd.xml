<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin"
    tools:context=".fragments.ProductBDFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/title_producto_bd"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:text="Consultar PRODUCTOS registrados en la base de datos"
        android:paddingTop="5dp"
        />
    <TextView
        android:id="@+id/txt_rta_productoBD"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/respuesta_usr"
        android:paddingLeft="5dp"
        android:paddingTop="10dp"
        />
    <android.support.v7.widget.RecyclerView
        android:id="@+id/recycler_producto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:paddingTop="10dp"
        />

</LinearLayout>
