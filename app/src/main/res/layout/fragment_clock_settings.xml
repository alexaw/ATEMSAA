<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:android1="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:layout_gravity="center"
    android:orientation="vertical" >

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.ClockSettingsFragment"
    android:orientation="vertical">

    <TextView
        android:id="@+id/txt_set_time"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_date_time"
        android:textSize="17sp"
        android:gravity="center"
        android:layout_marginBottom="15dp"
        />

    <TextView
        android:id="@+id/txt_day"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_day"
        android:layout_marginBottom="1dp"
        />

    <Spinner
        android:id="@+id/day_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_month"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_month"
        android:layout_marginBottom="1dp"
        android:paddingTop="12dp"
        />

    <Spinner
        android:id="@+id/month_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_year"
        android:layout_marginBottom="1dp"
        android:paddingTop="12dp"
        />

    <Spinner
        android:id="@+id/year_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_hour"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_hour"
        android:layout_marginBottom="1dp"
        android:paddingTop="12dp"
        />

    <Spinner
        android:id="@+id/hour_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_minute"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_minute"
        android:layout_marginBottom="1dp"
        android:paddingTop="12dp"
        />

    <Spinner
        android:id="@+id/minute_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_second"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_second"
        android:layout_marginBottom="1dp"
        android:paddingTop="12dp"
        />

    <Spinner
        android:id="@+id/second_spinner"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingBottom="30dp"
        />

    <Button
        android:id="@+id/btn_set_clock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="@string/txt_set_clock"
        android:layout_marginBottom="10dp"
        />

    <Button
        android:id="@+id/btn_check_clock"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_marginTop="3dp"
        android:text="@string/txt_check_clock"
        android:layout_marginBottom="10dp"
        />

    <TextView
        android:id="@+id/txt_rta_clock"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/respuesta_usr"
        />

    <TextView
        android:id="@+id/txt_view_rta_clock"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="" />
</LinearLayout>
</ScrollView>