<android.support.design.widget.CoordinatorLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context="com.example.yogis.atemsaa_fragments.fragments.NewUserFragment"
    >


    <EditText
        android:id="@+id/id_list_newuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID:"
        android:layout_marginBottom="50dp"
        />

    <TextView
        android:id="@+id/txt_rta_newuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/respuesta_usr"
        android:layout_marginTop="50dp"
        />

    <TextView
        android:id="@+id/txt_view_rta_list_newusr"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_marginTop="100dp"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fl_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="260dp"
        android:src="@mipmap/ic_add_user"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorBlue"
        android:visibility="invisible"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/txt_add_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="REGISTRAR"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="270dp"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fl_test_frame_user"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="180dp"
        android:src="@mipmap/ic_test"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorBlue"
        android:visibility="invisible"
        />

    <android.support.v7.widget.AppCompatButton
        android:id="@+id/txt_test_frame"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="PRUEBA"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="190dp"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fl_opc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="100dp"
        android:src="@mipmap/ic_opc"
        android:elevation="6dp"
        app:pressedTranslationZ="12dp"
        app:backgroundTint="@color/colorBlue"
        android:visibility="invisible"
        />


    <android.support.v7.widget.AppCompatButton
        android:id="@+id/txt_opc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="OPCIONES"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="70dp"
        android:layout_marginBottom="110dp"
        android:visibility="invisible"
        />

    <android.support.design.widget.FloatingActionButton
        android:id="@+id/fl_more"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|end"
        android:layout_marginRight="20dp"
        android:layout_marginBottom="20dp"
        android:src="@mipmap/ic_mas"
        android:elevation="6dp"
        app:pressedTranslationZ="6dp"
        app:backgroundTint="@color/colorBlue"

        />

</android.support.design.widget.CoordinatorLayout>
