<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:fab="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="5dp"
    tools:context="com.example.yogis.atemsaa_fragments.fragments.UserFragment"
    >

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
    <EditText
        android:id="@+id/id_list_newuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:hint="ID:"
        />

    <TextView
        android:id="@+id/txt_type_device"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_type_device"
        android:paddingTop="20dp"
        />

    <Spinner
        android:id="@+id/type_device_spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_meter_number"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/txt_number_meters"
        android:layout_marginBottom="1dp"
        />

    <Spinner
        android:id="@+id/meter_number_spinner"
        android:layout_width="250dp"
        android:layout_height="wrap_content"
        />

    <TextView
        android:id="@+id/txt_rta_newuser"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/respuesta_usr"
        android:layout_marginTop="20dp"
        android:paddingBottom="15dp"
        />

    <TextView
        android:id="@+id/txt_view_rta_list_newusr"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text=""
        android:layout_below="@id/txt_rta_newuser"
        android:background="@drawable/rectangle_blue"
        android:padding="10dp"
        />
    </LinearLayout>


    <com.getbase.floatingactionbutton.FloatingActionsMenu
        android:id="@+id/fl_more"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        fab:fab_addButtonColorNormal="@color/colorBlue"
        fab:fab_addButtonColorPressed="@color/colorBluePressed"
        fab:fab_addButtonPlusIconColor="@color/colorGray"
        fab:fab_labelStyle="@style/menu_labels_style"

        android:layout_marginBottom="16dp"
        android:layout_marginRight="16dp"
        android:layout_marginEnd="16dp"
        >

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fl_add_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorBlue"
            fab:fab_title="Agregar"
            fab:fab_colorPressed="@color/colorBluePressed"
            fab:fabSize="mini"
            fab:fab_icon="@mipmap/ic_add_user"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fl_remove_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorBlue"
            fab:fab_title="Eliminar"
            fab:fab_colorPressed="@color/colorBluePressed"
            fab:fabSize="mini"
            fab:fab_icon="@mipmap/ic_add_user"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fl_test_frame_user"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorBlue"
            fab:fab_title="Prueba"
            fab:fab_colorPressed="@color/colorBluePressed"
            fab:fabSize="mini"
            fab:fab_icon="@mipmap/ic_test"
            />

        <com.getbase.floatingactionbutton.FloatingActionButton
            android:id="@+id/fl_opc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            fab:fab_colorNormal="@color/colorBlue"
            fab:fabSize="mini"
            fab:fab_title="Opciones"
            fab:fab_colorPressed="@color/colorBluePressed"
            fab:fab_icon="@mipmap/ic_opc"
            />

    </com.getbase.floatingactionbutton.FloatingActionsMenu>

</RelativeLayout>
